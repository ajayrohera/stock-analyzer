{
  "crons": [
    {
      "path": "/api/cron/update-volume",
      "schedule": "30 10 * * 1-5"
    }
  ],
  "env": {
    "CRON_SECRET": "@CRON_SECRET"
  },
  "functions": {
    "app/api/cron/update-volume/route.ts": {
      "maxDuration": 60
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max_old_space_size=4096"
    }
  }
}